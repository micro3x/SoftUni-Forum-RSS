{
  "manifest_version": 2,
  "name": "SoftUni Forum RSS",
  "description": "This is a chome extension for notify you when there is a new forum post on the SoftUni Forum ",
  "version": "0.1",
  "icons": {
    "19": "img/icon_small.png",
    "38": "img/icon_medium.png",
    "128": "img/icon_big.png"
  },
  "browser_action": {
    "default_icon": "img/icon_small.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "lib/jquery-2.1.4.min.js",
      "lib/q.js",
      "app/data.js",
      "background.js"
    ]
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "<all_urls>"
  ]
}